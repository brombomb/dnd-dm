{
  "name": "dnd-dm",
  "version": "1.0.0",
  "description": "A web application for managing D&D dungeon data, including mapping and crawling.",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "client": "cd client && npm start",
    "build-client": "cd client && npm run build",
    "setup": "npm install && npm run install-client",
    "setup-client": "cd client && npm install"
  },
  "author": "Robert Walsh",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "pg": "^8.14.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/node": "^22.13.13",
    "@types/pg": "^8.11.11",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  }
}
